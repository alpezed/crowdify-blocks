{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "crowdify/slider",
	"version": "0.1.0",
	"title": "Slider",
	"category": "crowdify",
	"keywords": [ "slider", "slideshow", "carousel" ],
	"icon": "smiley",
	"description": "Display a slider.",
	"attributes": {
		"autoplay": {
			"type": "boolean",
			"default": true
		},
		"navigation": {
			"type": "boolean",
			"default": true
		},
		"pagination": {
			"type": "boolean",
			"default": false
		},
		"autoheight": {
			"type": "boolean",
			"default": true
		},
		"effect": {
			"type": "string",
			"default": "slide"
		},
		"speed": {
			"type": "number",
			"default": 500
		},
		"direction": {
			"type": "string",
			"default": "horizontal"
		},
		"clickablePagination": {
			"type": "boolean",
			"default": true
		},
		"paginationType": {
			"type": "string",
			"default": "bullets"
		},
		"slidesPerView": {
			"type": "number",
			"default": 1
		},
		"spaceBetween": {
			"type": "number",
			"default": 10
		},
		"delay": {
			"type": "number",
			"default": 3000
		},
		"loop": {
			"type": "boolean",
			"default": true
		},
		"freeMode": {
			"type": "boolean",
			"default": false
		},
		"sticky": {
			"type": "boolean",
			"default": false
		}
	},
	"example": {},
	"supports": {
		"html": false,
		"align": [ "wide", "full" ],
		"className": true,
		"color": {
			"background": true,
			"gradients": true,
			"link": true,
			"text": true
		},
		"spacing": {
			"padding": true,
			"margin": [ "top", "bottom" ]
		}
	},
	"textdomain": "crowdify-blocks",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"render": "file:./render.php",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}
